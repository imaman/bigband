      "pre-commit": "yarn lint-staged && yarn pretty-quick --staged",
      "pre-push": "syncpack list-mismatches && npm run build"
    }
  },
  "resolutions": {
    "jest/**/semver": "^7.5.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
